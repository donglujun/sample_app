<div class="col-md-9">
<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.description[0..200] %></td>
        <td><%= link_to 'Show', message, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Message', new_message_path, class: 'btn btn-default' %>
</div>
<script type="text/javascript">
  $("#backend").addClass("active")
</script>