<div class="col-md-9">
<p id="notice"><%= notice %></p>

<h1>Listing Messages</h1>
  <tbody>
    <% @messages.each do |message| %>
        <div>title:<%= message.title %></div>
        <div>description:<%= raw message.description[0..200] %></div>
        <div>
        <%= link_to 'Show', message, class: 'btn btn-default' %>
        <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-default' %>
        <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </div>
    <% end %>
  </tbody>
<%= link_to 'New Message', new_message_path, class: 'btn btn-default' %>
</div>
<script type="text/javascript">
  $("#backend").addClass("active")
</script>