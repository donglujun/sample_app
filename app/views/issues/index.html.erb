<h1>issues</h1>
<table class="table table-striped table-bordered table-responsive table-hover">
<thead>
  <tr>
    <th>id</th>
    <th>level</th>
    <th>create time</th>
    <th>update time</th>
    <th>state</th>
    <th>employee</th>
    <th>description</th>
    <th>operate</th>
  </tr>
</thead>
<tbody>
<% @issues.each do |s| %>
  <tr>
    <td><%= s.id %></td>
    <td><%= s.level %></td>
    <td><%= s.created_at %></td>
    <td><%= s.updated_at %></td>
    <td><%= s.state %></td>
    <td><%= s.employee.try(:name) %></td>
    <td><%= raw s.description[0..9] %></td>
    <td><%= link_to 'edit', edit_issue_path(s) %>
    <%= link_to 'delete', issue_path(s), method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
<%= paginate @issues %>
<%= link_to 'New', new_issue_path, class: 'btn btn-default' %>