<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
        <div class="portlet-title">
          <div class="caption">用户列表</div>
          <div class="actions btn-group">
          </div>
        </div>
        <div class="portlet-body flip-scroll">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>邮箱</th>
                <th>账户</th>
                <th>最后操作时间</th>
                <th>操作</th>
              </tr>
            </thead>
            <tbody>
            <% @users.each do |n| %>
              <tr>
                <td><%= n.email %></td>
                <td><%= n.username %></td>
                <td><%= n.updated_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
                <td><%= link_to '删除（并没有写）' %></td>
            <% end %>
            </tbody>
          </table>
          <%= paginate @users %>
        </div>
    </div>
  </div>
</div>